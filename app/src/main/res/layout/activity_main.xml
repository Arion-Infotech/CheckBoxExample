<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chkAndroid"
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Android"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkJava"
        android:layout_width="365dp"
        android:layout_height="54dp"
        android:layout_marginTop="34dp"
        android:text="Java"
        app:layout_constraintEnd_toEndOf="@+id/chkAndroid"
        app:layout_constraintStart_toStartOf="@+id/chkAndroid"
        app:layout_constraintTop_toBottomOf="@+id/chkAndroid" />

    <CheckBox
        android:id="@+id/chkPython"
        android:layout_width="359dp"
        android:layout_height="56dp"
        android:layout_marginTop="39dp"
        android:text="Python"
        app:layout_constraintEnd_toEndOf="@+id/chkJava"
        app:layout_constraintStart_toStartOf="@+id/chkJava"
        app:layout_constraintTop_toBottomOf="@+id/chkJava" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:text="SHOW"
        app:layout_constraintEnd_toEndOf="@+id/chkPython"
        app:layout_constraintStart_toStartOf="@+id/chkPython"
        app:layout_constraintTop_toBottomOf="@+id/chkPython" />
</androidx.constraintlayout.widget.ConstraintLayout>